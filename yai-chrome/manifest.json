{
  "name": "Yai",
  "description": "Yandex API text summarizer",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "contextMenus", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {},
  "host_permissions": ["https://300.ya.ru/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
